{
  "name": "cli",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/cli",
  "projectType": "library",

  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/core/cli",
        "tsConfig": "packages/core/cli/tsconfig.lib.json",
        "packageJson": "packages/core/cli/package.json",
        "main": "packages/core/cli/src/index.ts",
        "assets": ["packages/core/cli/*.md"],
        "rootDir": "packages/core/cli/src"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/core/cli/jest.config.ts"
      }
    }
  }
}
