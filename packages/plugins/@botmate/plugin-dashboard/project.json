{
  "name": "plugin-dashboard",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugins/@botmate/plugin-dashboard/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },

  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugins/@botmate/plugin-dashboard",
        "tsConfig": "packages/plugins/@botmate/plugin-dashboard/tsconfig.lib.json",
        "packageJson": "packages/plugins/@botmate/plugin-dashboard/package.json",
        "main": "packages/plugins/@botmate/plugin-dashboard/src/index.ts",
        "assets": ["packages/plugins/@botmate/plugin-dashboard/*.md"],
        "rootDir": "packages/plugins/@botmate/plugin-dashboard/src"
      }
    },
    "build:client": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugins/@botmate/plugin-dashboard"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/plugins/@botmate/plugin-dashboard/jest.config.ts"
      }
    }
  }
}
