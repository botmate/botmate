{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@botmate/build": ["packages/core/build/src/index.ts"],
      "@botmate/cli": ["packages/core/cli/src/index.ts"],
      "@botmate/client": ["packages/core/client/src/index.ts"],
      "@botmate/database": ["packages/core/database/src/index.ts"],
      "@botmate/icons": ["packages/shared/icons/src/index.ts"],
      "@botmate/plugin-auth": [
        "packages/plugins/@botmate/plugin-auth/src/index.ts"
      ],
      "@botmate/plugin-dashboard": [
        "packages/plugins/@botmate/plugin-dashboard/src/index.ts"
      ],
      "@botmate/plugin-settings": [
        "packages/plugins/@botmate/plugin-settings/src/index.ts"
      ],
      "@botmate/plugin-users": [
        "packages/plugins/@botmate/plugin-users/src/index.ts"
      ],
      "@botmate/server": ["packages/core/server/src/index.ts"],
      "@botmate/types": ["packages/shared/types/src/index.ts"],
      "@botmate/ui": ["packages/shared/ui/src/index.ts"],
      "@botmate/utils": ["packages/core/utils/src/index.ts"],
      "create-botmate": ["packages/core/create-botmate/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
