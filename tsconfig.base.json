{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@botmate/database": ["packages/core/database/src/index.ts"],
      "@botmate/plugin-auth": [
        "packages/plugins/@botmate/plugin-auth/src/index.ts"
      ],
      "@botmate/server": ["packages/core/server/src/index.ts"],
      "botmate": ["plugins/botmate/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
